{
  "name": "sentinel-dns-server",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run -c vitest.config.ts",
    "test:watch": "vitest -c vitest.config.ts",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:all": "npm run test && npm run test:integration",
    "test:coverage": "npm run test:coverage:unit && npm run test:coverage:integration",
    "test:coverage:unit": "vitest run -c vitest.config.ts --coverage",
    "test:coverage:integration": "vitest run -c vitest.integration.config.ts --coverage"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/helmet": "^13.0.2",
    "fastify-rate-limit": "npm:@fastify/rate-limit@^10.3.0",
    "@fastify/static": "^9.0.0",
    "@google/genai": "^1.39.0",
    "dns-packet": "^5.6.1",
    "dotenv": "^17.2.4",
    "fastify": "^5.7.4",
    "ipaddr.js": "^2.2.0",
    "maxmind": "^5.0.5",
    "pg": "^8.18.0",
    "tar": "^7.5.7",
    "undici": "^7.20.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^4.0.18",
    "vitest": "^4.0.18",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3"
  }
}
